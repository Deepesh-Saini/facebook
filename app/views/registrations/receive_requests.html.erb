<%= render partial: "shared/navbar"%>
<div class="shadow-lg p-3 mb-5 bg-body rounded">
<% @friends.each do |friend| %>
<div id="outer">
<% if friend.sender.avatar.representable? %>
<%= image_tag friend.sender.avatar, :size=> '45x45', style: "border-radius: 50%;"%>
<% else %>
<%= image_tag 'https://scontent.fbho4-1.fna.fbcdn.net/v/t1.30497-1/143086968_2856368904622192_1959732218791162458_n.png?_nc_cat=1&ccb=1-6&_nc_sid=7206a8&_nc_ohc=qP5OfDS9FOsAX8dsLHL&_nc_ht=scontent.fbho4-1.fna&oh=00_AT8cR63aKDWfhdEJucSjqiYNa9G_QLzh7ravtrxmdNJ9DA&oe=62A2EAF8', :size=> '50x40', style: "border-radius: 50%;"%>
<% end %>
<strong style="padding-left: 10px;">
<%= friend.sender.first_name %>
<%= friend.sender.last_name %>
</strong>
	<div class="inner">
    <%= button_to 'Accept', registration_friend_path(@current_user.id, friend.id), method: :patch, class: 'btn btn-primary' %></div>
  <div class="inner">
    <%= button_to "Reject", registration_friend_path(@current_user.id, friend.id), method: :delete, class: "btn btn-primary" %></div>
	</div>
<% end %>
</div>